<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <f:entry title="Report JSONs" field="glob">
        <f:textbox/>
    </f:entry>

    <f:entry title="Thresholds">
        <table width="250px">
            <tr>
                <td>
                    <img src="${rootURL}/images/16x16/yellow.gif" alt="100%"/>
                    Unstable
                </td>
                <td>
                    <f:textbox field="unstableThreshold"/>
                </td>
            </tr>
            <tr>
                <td>
                    <img src="${rootURL}/images/16x16/red.gif" alt="100%"/>
                    Failed
                </td>
                <td>
                    <f:textbox field="failureThreshold"/>
                </td>
            </tr>
        </table>
    </f:entry>

    <f:entry title="Fields to visualize" field="fieldsToVisualize">
        <f:textbox/>
    </f:entry>
</j:jelly>
